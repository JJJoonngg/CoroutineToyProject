<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/auth_text_view_margin"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/common_dialog_menu_item_padding">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/column"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/column1"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="제에에엥모오오오오옥" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/column"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/contentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/column2"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:hint="내애에에에요오오요옹" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <TextView
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/column"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <TextView
            android:id="@+id/dateContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="@dimen/common_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/column3"
            app:layout_constraintTop_toBottomOf="@id/content"
            tools:hint="yyyy-mm-dd" />


        <ImageButton
            android:id="@+id/todoNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:padding="@dimen/common_dialog_menu_item_padding"
            android:clickable="true"
            android:src="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>